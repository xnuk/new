{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git"
	},
	"linter": {
		"rules": {
			"all": true
		}
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded"
		},
		"globals": ["Deno", "window"]
	}
}
